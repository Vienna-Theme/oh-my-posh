{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "type": "os",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "foreground": "#ffffff",
                    "background": "#101010",
                    "template": " {{ .Icon }} ",
                    "properties": {
                        "macos": "mac"
                    }
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "template": "~/{{ .Path }} ",
                    "foreground": "#ffffff",
                    "background": "#101010",
                    "properties": {
                        "style": "folder"
                    }
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#ffffff",
                    "properties": {
                        "time_format": "15:04:05"
                    }
                },
                {
                    "type": "text",
                    "style": "plain",
                    "background": "transparent",
                    "template": " \u279c "
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3
}